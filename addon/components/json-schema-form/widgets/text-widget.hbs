<div class="text-widget" ...attributes>
  <JsonSchemaForm::Widgets::WidgetMetadata
    @description={{@description}}
    @formFieldId={{this.formFieldId}}
    @title={{@title}}
  />
  <input
    id={{this.inputId}}
    name={{@name}}
    value={{@value}}
    {{on "input" this.onValueChange}}
    class="text-widget__input">
</div>